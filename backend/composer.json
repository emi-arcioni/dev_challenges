{
    "name": "workana/hiring_challenge",
    "description": "Workana Dev Challenge",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "phpunit/phpunit": "8.5.9",
        "pusher/pusher-php-server": "^6.1",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.5",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
